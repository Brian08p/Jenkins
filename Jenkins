pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        sh 'mvn clean package'
      }
    }

    stage('Unit and Integration Tests') {
      steps {
        sh 'mvn test'
      }
    }

    stage('Code Analysis') {
      steps {
        sh 'mvn sonar:sonar'
      }
    }

    stage('Security Scan') {
      steps {
        sh 'mvn dependency-check:check'
      }
    }

    stage('Deploy to Staging') {
      steps {
        sh 'ansible-playbook -i staging deploy.yml'
      }
    }

    stage('Integration Tests on Staging') {
      steps {
        sh 'postman run my-integration-tests.json'
      }
    }

    stage('Deploy to Production') {
      steps {
        sh 'ansible-playbook -i production deploy.yml'
      }
    }
  }

  post {
    success {
      mail to: 'xyzbrian08@gmail.com',
           subject: "Pipeline Success: ${currentBuild.fullDisplayName}",
           body: "Good news, the pipeline ${currentBuild.fullDisplayName} has succeeded."
    }
    failure {
      mail to: 'xyzbrian08@gmail.com',
           subject: "Pipeline Failure: ${currentBuild.fullDisplayName}",
           body: "The pipeline ${currentBuild.fullDisplayName} has failed. Please check logs."
    }
  }
}
